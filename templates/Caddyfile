{
	acme_dns cloudflare {env.CF_TOKEN}
}

${DOMAIN_NAME} {
	@naive_proxy {
		path /${PATH}
	}
	handle @naive_proxy {
		forward_proxy {
			basic_auth ${USERNAME} ${PASSWORD}
			hide_ip
			hide_via
			probe_resistance
		}
	}
	handle {
		respond "Error: Invalid or Missing API Key" 401 {
			close
		}
	}
}
